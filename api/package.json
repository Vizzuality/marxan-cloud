{
  "name": "@marxan-cloud/api",
  "version": "0.4.0",
  "description": "API service for the Marxan Cloud platform",
  "author": "Vizzuality <hello@vizzuality.com> (https://vizzuality.com/)",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "api:start:dev": "nodemon --exec 'NODE_CONFIG_DIR=apps/api/config ts-node --files --project tsconfig.json -r tsconfig-paths/register apps/api/src/main.ts' -L | bunyan",
    "geoprocessing:start:dev": "nodemon --exec 'NODE_CONFIG_DIR=apps/geoprocessing/config ts-node --files --project tsconfig.json -r tsconfig-paths/register apps/geoprocessing/src/main.ts' -L | bunyan",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "rm -rf dist && nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit:ci": "jest --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "api:test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "geoprocessing:test:e2e": "jest --config ./apps/geoprocessing/test/jest-e2e.json",
    "ts-coverage": "typescript-coverage-report",
    "api:typeorm": "NODE_CONFIG_DIR=apps/api/config ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config apps/api/ormconfig.ts",
    "geoprocessing:typeorm": "NODE_CONFIG_DIR=apps/geoprocessing/config ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config apps/geoprocessing/ormconfig.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.5.1",
    "@nestjs/cqrs": "7.0.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "@turf/turf": "^5.1.6",
    "archiver": "5.3.0",
    "bcrypt": "^5.0.0",
    "bullmq": "1.31.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "geojson": "0.5.0",
    "helmet": "^4.3.1",
    "http-proxy": "^1.18.1",
    "jsonapi-serializer": "^3.6.7",
    "lodash": "^4.17.20",
    "mapshaper": "0.5.57",
    "ms": "^2.1.3",
    "multer": "^1.4.2",
    "nestjs-base-service": "0.6.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "pg-large-object": "^2.0.0",
    "pg-query-stream": "4.1.0",
    "pure-geojson-validation": "0.3.0",
    "purify-ts": "0.16.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "temp-dir": "^2.0.0",
    "typeorm": "0.2.30",
    "unzipper": "^0.10.11",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/archiver": "5.1.0",
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.38",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.5",
    "@types/geojson": "7946.0.7",
    "@types/http-proxy": "^1.17.5",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.167",
    "@types/ms": "^0.7.31",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.6",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pbf": "^3.0.2",
    "@types/pg-large-object": "^2.0.3",
    "@types/supertest": "^2.0.10",
    "@types/unzipper": "^0.10.3",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "axios-mock-adapter": "1.19.0",
    "bunyan": "^1.8.14",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "geojson2shp": "0.4.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "nock": "^13.1.0",
    "nodemon": "^2.0.6",
    "pbf": "^3.2.1",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2",
    "typescript-coverage-report": "^0.4.0",
    "utility-types": "^3.10.0",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@marxan-api/(.*)": "<rootDir>/apps/api/src/$1",
      "@marxan-geoprocessing/(.*)": "<rootDir>/apps/geoprocessing/src/$1",
      "@marxan/utils/(.*)": "<rootDir>/libs/utils/src/$1",
      "@marxan/utils": "<rootDir>/libs/utils/src",
      "@marxan/scenarios-planning-unit/(.*)": "<rootDir>/libs/scenarios-planning-unit/src/$1",
      "@marxan/scenarios-planning-unit": "<rootDir>/libs/scenarios-planning-unit/src",
      "@marxan/admin-regions/(.*)": "<rootDir>/libs/admin-regions/src/$1",
      "@marxan/admin-regions": "<rootDir>/libs/admin-regions/src",
      "@marxan/api-events/(.*)": "<rootDir>/libs/api-events/src/$1",
      "@marxan/api-events": "<rootDir>/libs/api-events/src",
      "@marxan-jobs/planning-unit-geometry/(.*)": "<rootDir>/libs/planning-unit-geometry/src/$1",
      "@marxan-jobs/planning-unit-geometry": "<rootDir>/libs/planning-unit-geometry/src",
      "@marxan/scenario-cost-surface/(.*)": "<rootDir>/libs/scenario-cost-surface/src/$1",
      "@marxan/scenario-cost-surface": "<rootDir>/libs/scenario-cost-surface/src",
      "@marxan/marxan-input/(.*)": "<rootDir>/libs/marxan-input/src/$1",
      "@marxan/marxan-input": "<rootDir>/libs/marxan-input/src",
      "@marxan/planning-area-repository/(.*)": "<rootDir>/libs/planning-area-repository/src/$1",
      "@marxan/planning-area-repository": "<rootDir>/libs/planning-area-repository/src"
    }
  }
}