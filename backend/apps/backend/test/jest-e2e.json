{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": ["node_modules", "src"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/../tsconfig.app.json"
    }
  },
  "moduleNameMapper": {
    "modules": "<rootDir>/../src/",
    "modules/(.*)": "<rootDir>/../src/$1"
  }
}
